	<profiles>
		<profile>
			<id>generate-jooq</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.jooq</groupId>
						<artifactId>jooq-codegen-maven</artifactId>
						<version>${jooq.version}</version>


						<executions>
							<execution>
								<phase>generate-sources</phase>
								<goals>
									<goal>generate</goal>
								</goals>
							</execution>
						</executions>

						<dependencies>
							<dependency>
								<groupId>org.postgresql</groupId>
								<artifactId>postgresql</artifactId>
								<version>${postgresql.version}</version>
							</dependency>
						</dependencies>

						<configuration>
							<goal></goal>
							<jdbc>
								<driver>org.postgresql.Driver</driver>
								<url>${jooq.jdbc.url}</url>
								<user>${jooq.jdbc.user}</user>
								<password>${jooq.jdbc.password}</password>
							</jdbc>
							<generator>
								<name>org.ng200.openolympus.jooqsupport.OpenOlympusCodeGenerator</name>
								<database>
									<name>org.jooq.util.postgres.PostgresDatabase</name>
									<includes>.*</includes>
									<excludes></excludes>
									<inputSchema>public</inputSchema>
									<customTypes>
										<customType>
											<name>java.time.LocalDate</name>
										</customType>
										<customType>
											<name>org.ng200.openolympus.jooqsupport.CustomTypes.OFFSETDATETIME</name>
											<type>java.time.OffsetDateTime</type>
											<binding>org.ng200.openolympus.util.DateTimeBinding</binding>
										</customType>
										<customType>
											<name>java.time.Duration</name>
											<converter>org.ng200.openolympus.util.DurationConverter</converter>
										</customType>
									</customTypes>
									<forcedTypes>
										<forcedType>
											<name>org.ng200.openolympus.jooqsupport.CustomTypes.OFFSETDATETIME</name>
											<types>timestamp\ with\ time\ zone</types>
										</forcedType>
										<forcedType>
											<name>java.time.LocalDate</name>
											<types>date.*</types>
										</forcedType>
										<forcedType>
											<name>java.time.Duration</name>
											<expression>.*duration.*</expression>
										</forcedType>
										<forcedType>
											<name>java.time.Duration</name>
											<expression>time_extension</expression>
										</forcedType>
										<forcedType>
											<name>java.time.Duration</name>
											<expression>.*cpu_time.*</expression>
										</forcedType>
										<forcedType>
											<name>java.time.Duration</name>
											<expression>.*real_time.*</expression>
										</forcedType>
									</forcedTypes>
								</database>
								<target>
									<packageName>org.ng200.openolympus.jooq</packageName>
									<directory>src-gen/main/java</directory>
								</target>
								<generate>
									<pojos>true</pojos>
									<daos>true</daos>
									<jpaAnnotations>true</jpaAnnotations>
									<interfaces>true</interfaces>
									<fluentSetters>true</fluentSetters>
								</generate>
								<strategy>
									<matchers>

										<tables>
											<table>
												<expression>contest</expression>

												<pojoImplements>
													org.ng200.openolympus.model.IContestSecurityDescription
												</pojoImplements>
											</table>
											<table>
												<expression>group</expression>

												<pojoImplements>
													org.ng200.openolympus.model.OlympusPrincipal,
													org.ng200.openolympus.model.IGroupSecurityDescription
												</pojoImplements>
											</table>
											<table>
												<expression>solution</expression>

												<pojoImplements>
													org.ng200.openolympus.model.ISolutionSecurityDescription
												</pojoImplements>
											</table>
											<table>
												<expression>task</expression>

												<pojoExtends>org.ng200.openolympus.model.LockableResourceImplWithIntegerId</pojoExtends>
												<pojoImplements>
													org.ng200.openolympus.model.ITaskSecurityDescription
												</pojoImplements>
											</table>
											<table>
												<expression>USER</expression>

												<pojoImplements>org.ng200.openolympus.model.UserDetailsImpl,
													org.ng200.openolympus.model.OlympusPrincipal,
													org.ng200.openolympus.model.IUserSecurityDescription</pojoImplements>
											</table>
											<table>
												<expression>verdict</expression>

												<pojoImplements>
													org.ng200.openolympus.model.IVerdictSecurityDescription
												</pojoImplements>
											</table>
										</tables>
									</matchers>
								</strategy>
							</generator>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
